@model BotilleriaDB.Models.Proveedore

@{
    ViewData["Title"] = "Editar Proveedor";
}
<h1 class="text-center">Editar Proveedor</h1>
<div>
    @*asp-action permite acceder a un método del controlador*@
    <form asp-action="Edit">
        <input type="hidden" asp-for="ProveedorId" />
        <div>
            <label class="form-label">Proveedor</label>
            @*asp-for es un helper que permite asignar el mismo nombre y id de la clase
            a los input*@
            <input type="text" class="form-control" asp-for="NombreProveedor" />
            @*validation-for permite validar algunos parametros*@
            <span asp-validation-for="NombreProveedor" class="badge bg-danger"></span>
        </div>
        <div>
            <label class="form-label">Direccion</label>
            @*asp-for es un helper que permite asignar el mismo nombre y id de la clase
            a los input*@
            <input type="text" class="form-control" asp-for="Direccion" />
            @*validation-for permite validar algunos parametros*@
            <span asp-validation-for="Direccion" class="badge bg-danger"></span>
        </div>
        <div>
            <label class="form-label">Telefono</label>
            @*asp-for es un helper que permite asignar el mismo nombre y id de la clase
            a los input*@
            <input type="text" class="form-control" asp-for="Telefono" />
            @*validation-for permite validar algunos parametros*@
            <span asp-validation-for="Telefono" class="badge bg-danger"></span>
        </div>
        <div class="text-end mt-3">
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Proveedore">Volver</a>
            <input type="submit" class="btn btn-primary" value="Guardar" />
        </div>
    </form>
</div>