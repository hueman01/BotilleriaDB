<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BotilleriaDB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BotilleriaDB.styles.css" asp-append-version="true" />
</head>
<body class="bg-success">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-5">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Botilleria De Hector</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categoría
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Categoria" asp-action="Create">Crear</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Categoria" asp-action="Index">Listar Categorías</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Producto
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Producto" asp-action="Create">Crear</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Producto" asp-action="Index">Listar Producto</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Cliente
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Cliente" asp-action="Create">Crear</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Cliente" asp-action="Index">Listar Cliente</a></li>
                            </ul>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Proveedores
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Proveedore" asp-action="Create">Crear</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Proveedore" asp-action="Index">Listar Proveedores</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Ventas
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Venta" asp-action="Create">Crear</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Venta" asp-action="Index">Listar Venta</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Detalle
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-controller="Detalle" asp-action="Create">Crear</a></li>
                                <li><a class="nav-link text-dark" asp-controller="Detalle" asp-action="Index">Listar Detalle</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy"></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav d-flex">
                        <li class="nav-item">
                            @if (TempData.Peek("nombre") != null)
                            {
                                <a class="nav-link"> Bienvenido @TempData.Peek("nombre") </a>
                            }
                            else
                            {
                                Context.Response.Redirect(Url.Action("Login", "Home"));
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Logout" asp-controller="Home">
                                Desconectar
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-black">
        <div class="container">
            &copy; 2023 - BotilleriaDB - <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
